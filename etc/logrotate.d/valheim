/opt/valheim-server/logs/testkitchen.log
{
        rotate 10
        size 1M
        create 644
        missingok
        notifempty
        compress
        delaycompress
        sharedscripts
        postrotate
                /usr/lib/rsyslog/rsyslog-rotate
        endscript
}

